{% extends 'base.html.twig' %}

{% block body %}
<div class="ui grid container">
    <div class="two column row">
        <div class="column">
            <img style="margin-left: 128px; margin-top: 48px;" src="{{ asset('assets/img/logo.png') }}" alt="">
        </div>
        <div class="column">
            <h1>Register!</h1>

            {{ form_start(form) }}
            {{ form_row(form.email) }}
            {{ form_row(form.gender) }}
            {{ form_row(form.plainPassword.first, {
                'label': 'Password'
            }) }}
            {{ form_row(form.plainPassword.second, {
                'label': 'Repeat password'
            }) }}
            {{ form_row(form.firstName) }}
            {{ form_row(form.lastName) }}
            {{ form_row(form.avatarUri) }}
            <button type="submit" class="btn btn-default">Sign up</button>
            {{ form_end(form) }}
            <p class="message">Have account? <a href="{{ path('security_login') }}">Log in</a></p>
        </div>
    </div>
</div>
{% endblock %}